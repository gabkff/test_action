{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "core:path:default",
    "opener:default",
    "fs:default",
    "fs:allow-app-read",
    "fs:allow-app-write",
    "fs:allow-app-read-recursive",
    "fs:allow-app-write-recursive",
    "http:default",
    {
      "identifier": "http:allow-fetch",
      "allow": [
        { "url": "https://tcn.dev.kffein.work/*" }
      ]
    }
  ]
}
