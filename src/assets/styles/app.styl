/**
 * Styles globaux de l'application
 * 
 * Reset CSS et styles de base appliqués à toute l'application
 */

// Reset
*
*::before
*::after
  margin: 0
  padding: 0
  box-sizing: border-box

// Base HTML
html
  font-size: 16px
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale
  scroll-behavior: smooth

// Responsive ratios pour le système rp()
// Ratio unique basé sur la taille desktop (2160px)
:root
  // Ratio principal : scale proportionnellement à la viewport
  // À 2160px = 1, à 1440px ≈ 0.67, à 720px ≈ 0.33, à 4320px = 2
  --ratio unquote('calc(100vw / 2160px)')
  
  // Ratio avec clamp pour limiter le scaling (optionnel)
  // Min: 0.5 (1080px), Max: 1.5 (3240px)
  --ratio-clamped unquote('clamp(0.5, calc(100vw / 2160px), 1.5)')

  // Pour r() / rp() : 2e valeur en dessous de $mobile (1024px), interpolation entre 1024 et 2161
  --ratio-between unquote('clamp(0, (100vw - 1024px) / (2161px - 1024px), 1)')
  --ratio-desktop unquote('calc(100vw / 2160px)')
  --ratio-mobile 1

body
  font-family: $font-family-base
  font-size: f-style('default')
  line-height: $line-height-normal
  color: $text-primary
  background-color: $bg-primary
  outline: none !important
  user-select: none !important
  outline-color: transparent !important
html, body
  height: 100%
  overflow: hidden
  margin 0
  padding 0
// App container
#app
  height: 100vh
  display: flex
  flex-direction: column

// Typography
h1, h2, h3, h4, h5, h6
  font-family: $font-family-heading
  font-weight: $font-weight-bold
  line-height: $line-height-tight
  color: $text-primary

h1
  font-size: $font-size-4xl

h2
  font-size: $font-size-3xl

h3
  font-size: $font-size-2xl

h4
  font-size: $font-size-xl

h5
  font-size: $font-size-lg

h6
  font-size: $font-size-base

p
  margin-bottom: $spacing-md

// Links
a
  color: $primary
  text-decoration: none
  transition: color $transition-fast

  &:hover
    color: $primary-dark

// Images
img
  max-width: 100%
  height: auto
  display: block
  user-select: none !important
  user-drag: none !important
  -webkit-user-drag: none
  -webkit-user-select: none

// Buttons (base)
button
  font-family: inherit
  font-size: inherit
  cursor: pointer
  border: none
  background: none

// Touch-friendly pour bornes et iPads
button
a
  -webkit-tap-highlight-color: transparent
  touch-action: manipulation
  cursor none !important

// Selection
::selection
  background: transparent

// Focus styles
:focus-visible
  outline: none

// Scrollbar (webkit)
::-webkit-scrollbar
  width: 8px
  height: 8px

::-webkit-scrollbar-track
  background: $gray-100

::-webkit-scrollbar-thumb
  background: $gray-400
  border-radius: $radius-full

  &:hover
    background: $gray-500

