/**
 * Variables globales
 * 
 * Définit les variables de spacing, breakpoints, etc.
 * Compatible avec le système Koddein
 */

// Breakpoints (utilisés par les mixins layout/responsive)
$mobile = 1024px
$desktop = 2161px
$layout-desktop = 2160px

// Gutters
$gutter = 100px
$gutter-tablet = 5vw
$gutter-mobile = 20px

// Spacing
$spacing-xs = 4px
$spacing-sm = 8px
$spacing-md = 16px
$spacing-lg = 24px
$spacing-xl = 32px
$spacing-2xl = 48px
$spacing-3xl = 64px

// Border radius
$radius-sm = 4px
$radius-md = 8px
$radius-tab = 10px
$radius-lg = 14px
$radius-lgxl = 22px
$radius-xl = 16px
$radius-full = 9999px

// Shadows
$shadow-sm = 0 1px 2px rgba(0, 0, 0, 0.05)
$shadow-md = 0 4px 6px rgba(0, 0, 0, 0.1)
$shadow-custom = inset 0px 10px 15px -3px rgba(0,0,0,0.1)
$shadow-lg = 0 10px 15px rgba(0, 0, 0, 0.1)
$shadow-xl = 0 20px 25px rgba(0, 0, 0, 0.15)

// Transitions
$transition-fast = 0.15s ease
$transition-normal = 0.25s ease
$transition-slow = 0.4s ease

// Z-index
$z-page = 50
$z-flash = 200
$z-cursor = 400
$z-transition = 590
$z-nav = 650
$z-header = 700
$z-loader = 900
$z-lightbox = 800
$z-debug = 9999

// Container
$container-max-width = 1200px
$container-padding = $spacing-lg
