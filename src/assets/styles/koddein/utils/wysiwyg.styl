/**
 * Wysiwyg Styles
 * Styles pour le contenu HTML généré par un CMS
 */

.wysiwyg
  h1, h2, h3, h4, h5, h6
    margin-bottom 0.5em
    font-weight $fw-bold
    line-height 1.3

  h1
    rp(font-size, 3.6rem 2.4rem)

  h2
    rp(font-size, 2.8rem 2rem)

  h3
    rp(font-size, 2.2rem 1.8rem)

  h4
    rp(font-size, 1.8rem 1.6rem)

  p
    margin-bottom 1em
    line-height 1.6

    &:last-child
      margin-bottom 0

  a
    color $primary
    text-decoration underline
    transition color 0.2s ease

    &:hover
      color $primary-dark

  ul, ol
    margin-bottom 1em
    padding-left 1.5em

  li
    margin-bottom 0.5em
    line-height 1.5

  blockquote
    margin 1.5em 0
    padding-left 1em
    border-left 3px solid $primary
    font-style italic

  img
    max-width 100%
    height auto
    margin 1em 0

  strong, b
    font-weight $fw-bold

  em, i
    font-style italic

  code
    background $gray-100
    padding 0.2em 0.4em
    border-radius 3px
    font-family monospace
    font-size 0.9em

  pre
    background $gray-100
    padding 1em
    border-radius 6px
    overflow-x auto
    margin 1em 0

    code
      background none
      padding 0

