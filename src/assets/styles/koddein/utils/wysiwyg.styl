/**
 * Wysiwyg Styles
 * Styles pour le contenu HTML généré par un CMS
 */

.wysiwyg
  font-family $ff-text
  font-size 30px
  line-height 1.3
  font-weight $fw-medium
  +layout(mobile)
    font-size 15px
  h1, h2, h3, h4, h5, h6
    margin-bottom 60px
    font-weight $fw-bold
    line-height 1.3
    font-family $ff-title
    +layout(mobile)
      margin-bottom 30px

  h1
    font-family $ff-title
    font-weight $fw-extrabold
    rp(font-size, 220px 130px)
    rp(line-height, 1 1)
    text-transform uppercase

  h2
    font-family $ff-title
    font-weight $fw-extrabold
    rp(font-size, 114px 100px)
    rp(line-height, 1.2 1)
    text-transform uppercase

  h3
    font-family $ff-text
    rp(font-size, 70px 25px)
    font-weight $fw-bold
    rp(line-height, 1.1 1.2)
    +layout(mobile)
      font-family $ff-title

  h4
    font-family $ff-text
    r(font-size, 64px 18px)
    font-weight $fw-bold
    line-height 1.2

  p
    font-family $ff-text
    r(font-size, 30px 15px)
    line-height 1.3
    font-weight $fw-medium

    &:last-child
      margin-bottom 0

  a
    color $primary
    text-decoration underline
    transition color 0.2s ease

  ul, ol
    f-style('small-body')
    margin-bottom 1em
    r(padding-left, 1.5em 1.25em)
    position relative
    +layout(mobile)
      font-size 15px
      font-weight $fw-medium
      line-height 1.3


  li
    f-style('small-body')
    margin-bottom 0.5em
    line-height 1.5
    position relative
    +layout(mobile)
      font-size 15px
      font-weight $fw-medium
      line-height 1.3
    &:before
        content ""
        size 6px
        background currentColor
        border-radius 10px
        color currentColor
        font-weight bold
        display inline-block
        position absolute 
        r(top, 1.25rem .5rem)
        r(left, -22px -16px)
  ol
    li
      +layout(mobile)
        padding-left .5rem
      &:before
        content ""
        r(size, 21px 10px)
        background transparent
        border-radius 10px
        border 6px solid $fjord
        font-weight bold
        display inline-block
        position absolute 
        r(top, .75rem 0.25rem)
        r(left, -2.9rem -1rem)

  blockquote
    margin 1.5em 0
    padding-left 1em
    border-left 3px solid $primary
    font-style italic

  img
    max-width 100%
    height auto
    margin 1em 0

  strong, b
    font-weight $fw-bold

  em, i
    font-style italic

  code
    background $gray-100
    padding 0.2em 0.4em
    border-radius 3px
    font-family monospace
    font-size 0.9em

  pre
    background $gray-100
    padding 1em
    border-radius 6px
    overflow-x auto
    margin 1em 0

    code
      background none
      padding 0

