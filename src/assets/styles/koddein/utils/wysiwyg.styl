/**
 * Wysiwyg Styles
 * Styles pour le contenu HTML généré par un CMS
 */

.wysiwyg
  h1, h2, h3, h4, h5, h6
    margin-bottom 60px
    font-weight $fw-bold
    line-height 1.3
    font-family $ff-title

  h1
    rp(font-size, 220px 55px)

  h2
    rp(font-size, 114px 40px)

  h3
    rp(font-size, 70px 35px)

  h4
    rp(font-size, 64px)

  p
    f-style('small-body')
    margin-bottom 80px
    line-height 1.6

    &:last-child
      margin-bottom 0

  a
    color $primary
    text-decoration underline
    transition color 0.2s ease

  ul, ol
    f-style('small-body')
    margin-bottom 1em
    padding-left 1.5em

  li
    f-style('small-body')
    margin-bottom 0.5em
    line-height 1.5

  blockquote
    margin 1.5em 0
    padding-left 1em
    border-left 3px solid $primary
    font-style italic

  img
    max-width 100%
    height auto
    margin 1em 0

  strong, b
    font-weight $fw-bold

  em, i
    font-style italic

  code
    background $gray-100
    padding 0.2em 0.4em
    border-radius 3px
    font-family monospace
    font-size 0.9em

  pre
    background $gray-100
    padding 1em
    border-radius 6px
    overflow-x auto
    margin 1em 0

    code
      background none
      padding 0

